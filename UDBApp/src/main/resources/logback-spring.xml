<configuration>
    <!-- Define a console appender -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define an appender for function1 logs -->
    <appender name="FUNCTION1-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/function1.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/function1.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define an appender for function2 logs -->
    <appender name="FUNCTION2-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/function2.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/function2.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configure the loggers -->
    <logger name="com.example.function1" level="INFO" additivity="false">
        <appender-ref ref="FUNCTION1-FILE" />
    </logger>

    <logger name="com.example.function2" level="INFO" additivity="false">
        <appender-ref ref="FUNCTION2-FILE" />
    </logger>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="console" />
    </root>
</configuration>
